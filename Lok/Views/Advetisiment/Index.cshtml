@model IEnumerable<Lok.Models.Advertisiment>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";

}

<h3>Advertisiment</h3>


<p>
    <a asp-action="Create" class="btn btn-primary"><i class="ion-plus"></i> Create New</a>
</p>
<table class="table" id="tbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdvertisimentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SNo)
            </th>
            <th>
                Service
            </th>
            <th>
                Group
            </th>
            <th>
                Sub Group
            </th>
            <th>
                Ethnical Group
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdvertisimentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubGroup.SubGroupName)
                </td>
                <td>
                    @{string a = "";}
                    @if (item.EthinicalGroups != null)
                    {
                        @foreach (var items in item.EthinicalGroups)
                        {
                            a = a + items.Name + " , ";
                        }
                    }
                    @a
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/assets/js/jquery.min.js"></script>
<script>
    $(function () {
        $("#tbl").DataTable(
            {
                "columnDefs": [

                    { "orderable": false, "targets": 6 },



                ],
            });
    })
</script>

@model Lok.Models.Advertisiment

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";

}

<h3>Create Advertisiment</h3>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label"> Advertisiment No</label>
                <input asp-for="AdvertisimentNo" class="form-control" />
                <span asp-validation-for="AdvertisimentNo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="SNo" class="control-label"></label>
                <input asp-for="SNo" class="form-control" />
                <span asp-validation-for="SNo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Advertisiment Type</label>
                <input asp-for="AdvertisimentType" class="form-control" />
                <span asp-validation-for="AdvertisimentType" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Post</label>

                <select asp-for="PostId" asp-items="ViewBag.PostId" class="form-control">
                    <option disabled selected>--- Select ---</option>

                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Service</label>

                <select asp-for="ServiceId" asp-items="ViewBag.ServiceId" class="form-control">
                    <option disabled selected>--- Select ---</option>

                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Group</label>
                <select asp-for="GroupId" asp-items="ViewBag.GroupId" class="form-control">


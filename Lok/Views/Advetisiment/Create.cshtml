                </select>
                <span asp-validation-for="SubGroupId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Ethinic Group</label><br />
                @{int i = 0;}
                @foreach (var item in ViewBag.EthinicalGroup)
                {
                    <input name="EthinicalGroup[@i]" value="@item.Id" class="ac" type="checkbox" id="EthinicalGroup[@i]" />
                    <label>@item.Name</label><br />
                    i++;
                }
                @*@if (Model.SelectedFruits.Contains(item.Value))
                {<text> checked </text>*@
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Publishing  Date</label>
                <input asp-for="DatePublished" id="datepicker" type="date" class="form-control" />
                <span asp-validation-for="DatePublished" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label"> Publishing Time</label>
                <input asp-for="TimePublished" id="time1" type="time" class="form-control" />
                <span asp-validation-for="TimePublished" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="Office" class="control-label"></label>
                <input asp-for="Office" class="form-control" />
                <span asp-validation-for="Office" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="Marks" class="control-label"></label>
                <input asp-for="Marks" class="form-control" />
                <span asp-validation-for="Marks" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="MaxAge" class="control-label"></label>
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Examtype" class="control-label"></label><br />
                @{int j = 0;}
                @foreach (var item in ViewBag.Exam)
                {
                    <input name="Exam[@j]" value="@item.ExamType" type="checkbox" id="Exam" />
                    <label>@item.ExamType</label><br />
                    j++;
                }
                @*@if (Model.SelectedFruits.Contains(item.Value))
                {<text> checked </text>*@
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Education</label>
                <select asp-for="EducationId" asp-items="ViewBag.MinEdu" class="form-control">
                    <option disabled selected>--- Select ---</option>

                </select>

                <span asp-validation-for="EducationId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="NoticeNo" class="control-label"></label>
                <input asp-for="NoticeNo" class="form-control" />
                <span asp-validation-for="NoticeNo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Exam date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Fiscal year</label>
                <input asp-for="FiscalYear" class="form-control" />
                <span asp-validation-for="FiscalYear" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Double dastur Date</label>
                <input asp-for="DoubleDasturDate" type="date" class="form-control" />
                <span asp-validation-for="DoubleDasturDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="Notice" class="control-label"></label>
                <input asp-for="Notice" class="form-control" />
                <span asp-validation-for="Notice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <center>
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
                </center>
            </div>
        </div>
    </div>

</form>


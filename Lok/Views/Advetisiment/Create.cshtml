                    @foreach (var item in ViewBag.EthinicalGroup)
                    {
                        <input name="EthinicalGroup[@i]" value="@item.Id" type="checkbox" id="EthinicalGroup[@i]" />
                        <label>@item.Name</label><br />
                        i++;
                    }
                    @*@if (Model.SelectedFruits.Contains(item.Value))
                        {<text> checked </text>*@

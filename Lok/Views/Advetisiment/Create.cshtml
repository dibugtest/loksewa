                    <input asp-for="DatePublished" id="datepicker" class="form-control" />
                    <span asp-validation-for="DatePublished" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimePublished" class="control-label"></label>
                    <input asp-for="TimePublished" id="time1" class="form-control" />
                    <span asp-validation-for="TimePublished" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Office" class="control-label"></label>
                    <input asp-for="Office" class="form-control" />
                    <span asp-validation-for="Office" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Marks" class="control-label"></label>
                    <input asp-for="Marks" class="form-control" />
                    <span asp-validation-for="Marks" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MinAge" class="control-label"></label>
                    <input asp-for="MinAge" class="form-control" />
                    <span asp-validation-for="MinAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxAge" class="control-label"></label>
                    <input asp-for="MaxAge" class="form-control" />
                    <span asp-validation-for="MaxAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Examtype" class="control-label"></label>
                    <input asp-for="Examtype" class="form-control" />
                    <span asp-validation-for="Examtype" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationId" class="control-label"></label>
                    <select asp-for="EducationId" asp-items="ViewBag.MinEdu" class="form-control">
                        <option disabled selected>--- Select ---</option>

                    </select>

                    <span asp-validation-for="EducationId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoticeNo" class="control-label"></label>
                    <input asp-for="NoticeNo" class="form-control" />
                    <span asp-validation-for="NoticeNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" id="datepicker1" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DoubleDasturDate" class="control-label"></label>
                    <input asp-for="DoubleDasturDate" id="datepicker2" class="form-control" />
                    <span asp-validation-for="DoubleDasturDate" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Notice" class="control-label"></label>
                    <input asp-for="Notice" class="form-control" />
                    <span asp-validation-for="Notice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                    <a asp-action="Index">Back to List</a>

                </div>
        </form>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(function () {

        $('form input[type=checkbox]').change(function (e) {
            e.preventDefault();

            // alert($(this).val());
            if ($(this).prop("checked") == true) {
                var className = $(this).attr('Value');//id layeko ho
                b = className + "value";//id ma value lekhya matra ho
                c = $(this).attr('Name') + "value";//name autai hune vayeko le yaha chai value add vako ho

                $(this).after('&nbsp;<input type="text" id="' + b + '"  size="4" name="' + c + '">');

                //$(this).after('&nbsp;<input type="text" id="txt"  size="4" name="Value4">');
            }
            else {
                var className = $(this).attr('Value');//id leko ho eth group ko ie that is unique
                b = className + "value";

                $("#" + b).remove();

                //check.next("input[type=text]").remove();
                // check.next("body input#txt").val("1");
                // $(this).after('input[type=text]').remove();

            }

        });
    });
</script>


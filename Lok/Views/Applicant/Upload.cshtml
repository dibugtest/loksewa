@model Lok.ViewModel.UploadVM

@{
    ViewData["Title"] = "Upload";
}

<h2>Upload</h2>

<h4>UploadVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photograph" class="control-label"></label>
                <input asp-for="PhotographFile" class="form-control" />
                <span asp-validation-for="Photograph" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.PhotographLink))
                {
                    <img src="@Url.Content(Model.PhotographLink)" alt="@Model.Photograph" style="height:50px;width:50px;"/>
                }

            </div>
           
            <div class="form-group">
                <label asp-for="Signature" class="control-label"></label>
                <input asp-for="SignatureFile" class="form-control" />
                <span asp-validation-for="Signature" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.SignatureLink))
                {
                    <img src="@Url.Content(Model.SignatureLink)" alt="@Model.Signature" style="height:50px;width:50px;" />

                }
            </div>
           
            <div class="form-group">
                <label asp-for="Citizenship" class="control-label"></label>
                <input asp-for="CitizenshipFile" class="form-control" />
                <span asp-validation-for="Citizenship" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.CitizenshipLink))
                {
                    <img src="@Url.Content(Model.CitizenshipLink)" alt="@Model.Citizenship" style="height:50px;width:50px;" />

                }
            </div>
            
            <div class="form-group">
                <label asp-for="InclusionGroup" class="control-label"></label>
                <input asp-for="InclusionGroupFile" class="form-control" />
                <span asp-validation-for="InclusionGroup" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.InclusionGroupLink))
                {
                    <img src="@Url.Content(Model.InclusionGroupLink)" alt="@Model.InclusionGroup" style="height:50px;width:50px;" />

                }
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


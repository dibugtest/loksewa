@model IEnumerable<Lok.ViewModel.EducationVM>
@{
    ViewData["Title"] = "Education Info";
    ViewData["HeaderMain"] = "Education Information";
    ViewData["HeaderLink"] = "Education";
    Layout = "_layoutUser";

}
<partial name="_HeaderPartialIndex" />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p>
                    <a asp-action="EducationCreate" class="btn btn-primary">Add Education</a>
                </p>
                <div>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>
                               S.No
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BoardName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Level)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Faculty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DivisionPercentage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MainSubject)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DegreeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EducationType)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.EId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BoardName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Level)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Faculty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DivisionPercentage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MainSubject)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DegreeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EducationType)
                                    </td>
                                    @*width:15%*@
                                    <td style="white-space: nowrap;">
                                        <div class="tabledit-toolbar btn-toolbar" style="text-align: left;">
                                            <div class="btn-group btn-group-sm" style="float: none;">
                                                <a href='@Url.Action("EducationEdit", "Applicant")?EId=@item.EId' type="button" class="tabledit-edit-button btn btn-sm btn-info" style="float: none; margin: 5px;"><span class="ti-pencil"></span></a>
                                                <a href="@Url.Action("DeleteEducation","Applicant")?EId=@item.EId" onclick="return confirm('Are you sure you want to delete this record?');" type="button" class="tabledit-delete-button btn btn-sm btn-info" style="float: none; margin: 5px;"><span class="ti-trash"></span></a>
                                            </div>
                                        </div>
                                    </td>
                                   
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="9">No Record Found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
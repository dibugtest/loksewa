@model IEnumerable<Lok.ViewModel.TrainingVM>
@{
    ViewData["Title"] = "Training Info";
    ViewData["HeaderMain"] = "Training Information";
    ViewData["HeaderLink"] = "Training";
    Layout = "_layoutUser";
}
<partial name="_HeaderPartialIndex" />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p>
                    <a asp-action="TrainingCreate" class="btn btn-primary">Create New</a>
                </p>
                <div>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                </div>
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.TId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrganizationName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrainingName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DivisionPercentage)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrganizationName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrainingName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DivisionPercentage)
                                    </td>

                                    @*width:15%*@
                                    <td style="white-space: nowrap;">
                                        <div class="tabledit-toolbar btn-toolbar" style="text-align: left;">
                                            <div class="btn-group btn-group-sm" style="float: none;">
                                                <a href='@Url.Action("TrainingEdit", "Applicant")?TId=@item.TId' type="button" class="tabledit-edit-button btn btn-sm btn-info" style="float: none; margin: 5px;"><span class="ti-pencil"></span></a>
                                                <a href="@Url.Action("DeleteTraining","Applicant")?TId=@item.TId" onclick="return confirm('Are you sure you want to delete this record?');" type="button" class="tabledit-delete-button btn btn-sm btn-info" style="float: none; margin: 5px;"><span class="ti-trash"></span></a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6">No Record found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

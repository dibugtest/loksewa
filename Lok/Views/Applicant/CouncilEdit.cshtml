@model Lok.ViewModel.ProfessionalCouncilVM

@{
    ViewData["Title"] = "Council";
    ViewData["HeaderMain"] = "Council Information";
    ViewData["HeaderLink"] = "Council";
    Layout = "_layoutUser";

}
<partial name="_HeaderPartial" />

<form asp-action="CouncilEdit" enctype="multipart/form-data" class="row form-material">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PId" />


    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="ProviderName" class="control-label"></label>
            <input asp-for="ProviderName" class="form-control" />
            <span asp-validation-for="ProviderName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="RegistrationNo" class="control-label"></label>
            <input asp-for="RegistrationNo" class="form-control" />
            <span asp-validation-for="RegistrationNo" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="ValidateFrom" class="control-label"></label>
            <input asp-for="ValidateFrom" class="form-control" type="date" id="txtValidFrom"/>
            <input asp-for="ValidateFromNep" class="form-control" id="txtValidFromNep"/>

            <span asp-validation-for="ValidateFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="RenewDate" class="control-label"></label>
            <input asp-for="RenewDate" class="form-control" type="date" id="txtRenewDate"/>
            <input asp-for="RenewDateNep" class="form-control" id="txtRenewDateNep"/>

            <span asp-validation-for="RenewDate" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="Validity" class="control-label"></label>
            <input asp-for="Validity" class="form-control" type="date"/>
            <span asp-validation-for="Validity" class="text-danger"></span>
        </div>
    </div>
   
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="FileName" class="control-label"></label>
            <input type="hidden" asp-for="FileName" />
            <input asp-for="FileMain" class="form-control" />
            <span asp-validation-for="FileName" class="text-danger"></span>
            @if (!String.IsNullOrEmpty(Model.FileMainLink))
            {
                <br /> <a href="@Url.Content(Model.FileMainLink)"><i class="fa fa-file-pdf"></i> @Model.FileName</a>
            }
        </div>
    </div>


    <div class="col-md-12">
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</form>
<partial name="_FooterPartial" />
@section Scripts{
    <script>
        $(function () {
            $("#txtValidFromNep").nepaliDatePicker({
                onChange: function () {
                    $('#txtValidFromNep').val();
                    $('#txtValidFrom').val(BS2AD($('#txtValidFromNep').val()));
                }
            });

            $('#txtValidFrom').change(function () {
                $('#txtValidFromNep').val(AD2BS($('#txtValidFrom').val()));
            });


            $("#txtRenewDateNep").nepaliDatePicker({
                onChange: function () {
                    $('#txtRenewDateNep').val();
                    $('#txtRenewDate').val(BS2AD($('#txtRenewDateNep').val()));
                }
            });

            $('#txtRenewDate').change(function () {
                $('#txtRenewDateNep').val(AD2BS($('#txtRenewDate').val()));
            });

        })
    </script>

}
